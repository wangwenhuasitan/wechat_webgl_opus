/* pages/authors/authors.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  overflow: hidden;
}
.scrollarea{ 
  overflow-y: auto;  
  flex:1; 
  padding: 10rpx;
  box-sizing: border-box;
  width: 100%;  
  background-color: rgb(255, 255, 255);
}
.tabListItem {
  display:flex;
  flex-direction: row;
  justify-content: space-between;  
  border-bottom: rgb(117, 117, 117) 1px solid;
  padding:16rpx;
}
.detailLeft{
  width: 30%;
  height: 260rpx;
}
.detailRight{
  flex:1;
  text-align: left;
  margin-left: 16rpx;  
  overflow: hidden;
}
.description{
  display:block;
  line-height: 38rpx;
}
.avator {
  width: 100%;
  height: 100%;
  background-color: darkgray;  
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}
.dummyInput{
  background-color: white;
  width:100%;
}
.cueText{
  margin-left:25rpx;
}
.search{
  font-size: 25rpx;
  margin-left:25rpx;
}