/* pages/secondaryPages/worksManagement/worksManagement.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  overflow: hidden;
}
.scrollarea{ 
  overflow-y: auto;  
  flex:1; 
  padding: 16rpx;
  box-sizing: border-box;
  width: 100%;
}
.tabListItem {
  width: 100%;
  height:525rpx; 
  padding:16rpx;
  border-radius: 33rpx;
  box-sizing: border-box;
  text-align: center;
  background-color: rgb(197, 197, 197); 
}
.cardTop{
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  margin:auto 16rpx;
}
.thumbnail{
  width: 95%;
  height:70%;
  margin:16rpx auto;
  border:rgb(126, 126, 126) 1px solid;
  background-color: rgb(236, 225, 204); 
}
.cardBottom{
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  align-items: center;
  margin:auto 16rpx;
}
.avatar{
  width: 66rpx;
  height:66rpx;
  border:rgb(126, 126, 126) 1px solid;
  border-radius: 35rpx;
  background-color: rgb(230, 205, 159);
  margin-right:16rpx; 
}
.cardHandler{
  width: 100%;
  height:91rpx;
  margin:16rpx auto;
  padding-bottom:16rpx;
  border-bottom:grey 1px solid;  
  display:flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content:space-between;
  align-items: center;
}
.handlerButton{
  margin:0;
  width:145rpx;
  height:91rpx;
  background-color: rgb(230, 205, 159);
}
.uploadFileBox{
  width: 100%;
  height:102rpx;
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
}
.uploadFileButton{
width:260rpx;
height:102rpx;
background-color: rgb(66, 225, 247);
}
.inputBox{
  width: 100%;
  height:102rpx;
  padding: 16rpx;
  box-sizing: border-box;
  border:gray 1px solid;
  border-radius: 16rpx;
}