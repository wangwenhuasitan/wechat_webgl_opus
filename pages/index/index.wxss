/**index.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  overflow: hidden;
}
.scrollarea{ 
  overflow-y: auto;  
  flex:1; 
  padding: 16rpx;
  box-sizing: border-box;
  width: 100%;
}
.tabListItem {
  width: 100%;
  height:525rpx;
  margin-bottom: 25rpx;
  padding:16rpx;
  border-radius: 33rpx;
  box-sizing: border-box;
  text-align: center;
  background-color: rgb(197, 197, 197); 
}
.cardTop{
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  margin:auto 16rpx;
}
.thumbnail{
  width: 95%;
  height:70%;
  margin:16rpx auto;
  border:rgb(126, 126, 126) 1px solid;
  background-color: rgb(236, 225, 204); 
}
.cardBottom{
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  align-items: center;
  margin:auto 16rpx;
}
.avatar{
  width: 66rpx;
  height:66rpx;
  border:rgb(126, 126, 126) 1px solid;
  border-radius: 35rpx;
  background-color: rgb(230, 205, 159); 
  margin-right:16rpx; 
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}
.dummyInput{
  background-color: white;
  width:100%;
}
.cueText{
  margin-left:25rpx;
}
.search{
  font-size: 25rpx;
  margin-left:25rpx;
}